@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Tìm kiếm sản phẩm</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Tên Sản Phẩm:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập tên sản phẩm cần tìm">
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <label class="col-sm-4 col-form-label">Chọn loại sản phẩm:</label>
                            <div class="col-sm-8">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="categoryIds" value="@category.MaLoaiSP" />
                                        <label class="form-check-label">@category.TenLoai</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <input type="submit" class="btn btn-danger" value="Tìm sản phẩm">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
