@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using WEB_DA.Models;
@model WEB_DA.Models.Customer
@{
    ViewBag.Title = "Đăng Ký";
}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <body class="text-center">
        <main class="form-signin">
            <img src="~/HinhAnh/everonvn-vn.jpg" alt="" width="72" height="57" />
            <h1 class="h3 mb-3 fw-normal">Đăng Ký</h1>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" id="TenKhachHang" class="form-control" name="TenKhachHang" placeholder="Tên Khách Hàng" required>
                        <label for="TenKhachHang">Tên Khách Hàng</label>
                        <span class="text-danger" id="TenKhachHang-error"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" id="DienThoai" class="form-control" name="DienThoai" placeholder="Số Điện Thoại" required>
                        <label for="DienThoai">Số Điện Thoại</label>
                        <span class="text-danger" id="DienThoai-error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="password" id="MatKhau" class="form-control" name="MatKhau" placeholder="Mật Khẩu" required>
                        <label for="MatKhau">Mật Khẩu</label>
                        <span class="text-danger" id="MatKhau-error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <select id="GioiTinh" class="form-control" name="GioiTinh" required>
                            <option value="">Chọn Giới Tính</option>
                            <option value="True">Nam</option>
                            <option value="False">Nữ</option>
                            <option value="Null">Khác</option>
                        </select>
                        <label for="GioiTinh">Giới Tính</label>
                        <span class="text-danger" id="GioiTinh-error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" id="DiaChi" class="form-control" name="DiaChi" placeholder="Địa Chỉ" required>
                        <label for="DiaChi">Địa Chỉ</label>
                        <!-- Thêm thông báo lỗi nếu cần -->
                        <span class="text-danger" id="DiaChi-error"></span>
                    </div>
                </div>

               
            </div>
            <div class="clearfix mt-3">
                <button class="btn btn-lg btn-primary" type="submit">Đăng Ký</button>
                <button type="button" class="btn btn-lg btn-secondary" onclick="window.location.href='/Home/Index'">Quay Lại</button>
            </div>
        </main>
    </body>
}
