@{
    ViewBag.Title = "Dathang";
    KhachHang kh = (KhachHang)Session["kh"];
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using WEB_DA.Models;
@model GioHang

<div class="container mt-4">
    <h2 class="text-center mb-4">Xác Nhận Đơn Hàng</h2>

    <form action="@Url.Action("XacNhanDonHang", "Home")" method="post">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th colspan="4" class="text-danger text-center">Thông tin đơn hàng</th>
                </tr>
                <tr>
                    <th>Mã Sản Phẩm</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CartItem item in Model.list)
                {
                    <tr>
                        <td>@item.MaSP</td>
                        <td>@item.TenSP</td>
                        <td>@item.SoLuong</td>
                        <td>@String.Format("{0:#,###}", item.DonGia) VND</td>
                        
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"><strong>Tổng số lượng:</strong> @Model.TongSLHang()</td>
                    <td colspan="2">@String.Format("{0:#,###}", Model.TongThanhTien()) VND</td>
                </tr>
                <tr>
                    <td colspan="3"></td>
                    <td class="text-center">
                        <input type="submit" value="Đồng ý đặt hàng" class="btn btn-success" />
                    </td>
                </tr>
            </tfoot>
        </table>
    </form>
</div>
